//factorial break
let factorial = 1
let num = 10
while (true) {
    factorial *= num
    num--
    if (num === 1) break
}
console.log(factorial)

//factorial for
let factorialw = 1
for (let i = 10; i > 0; i--) {
    factorialw *= i
}
console.log(factorialw)

//factorial while
let factorialj = 1
let num1 = 10
while (num1 > 1) {
    factorialj *= num
    num1--
}
console.log(factorialj)
